<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/shop/css/style.css" asp-append-version="true" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
            <a class="navbar-brand brand-logo" asp-area="Shop" asp-controller="Category" asp-action="Index"> <img src="~/shop/images/logo.svg" alt="logo" /> </a>
            <a class="navbar-brand brand-logo-mini" asp-area="Shop" asp-controller="Category" asp-action="Index"><img src="~/shop/images/logo-mini.svg" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                <span><i class="fa-solid fa-bars"></i></span>
            </button>
            <div class="search-field d-none d-md-block">
                <form class="d-flex align-items-center h-100" action="#">
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                        <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
                    </div>
                </form>
            </div>
            <ul class="navbar-nav navbar-nav-right" style="margin-right: 100px;">
                <li class="nav-item nav-profile dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" href="#" data-bs-toggle="dropdown"
                    aria-expanded="false" style="padding-right: 25px;">
                        <div class="nav-profile-img">
                            <img src="~/shop/images/faces/face1.jpg" alt="image">
                            <span class="availability-status online"></span>
                        </div>
                        <div class="nav-profile-text">
                            <p class="mb-1 text-black">Shoper</p>
                        </div>
                    </a>
                </li>

            </ul>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item nav-profile">
                    <a class="nav-link" asp-area="Shop" asp-controller="Profile" asp-action="Index">
                        <div class="nav-profile-image">
                            <img src="~/shop/images/faces/face1.jpg" alt="profile">
                            <span class="login-status online"></span>
                            <!--change to offline or busy as needed-->
                        </div>
                        <div class="nav-profile-text d-flex flex-column">
                            <span class="font-weight-bold mb-2">Shoper</span>
                            <span class="text-secondary text-small">Store Owner</span>
                        </div>
                        <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                    </a>
                </li>
                <li class="nav-item">
                    @*<a class="nav-link" asp-area="Shop" asp-controller="Home" asp-action="Index">
                        <span class="menu-title">Dashboard</span>
                        <i class="fa-solid fa-house" style="padding-left: 120px;"></i>
                    </a>*@
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Shop" asp-controller="Category" asp-action="Index">
                        <span class="menu-title">Category</span>
                        <i class="fa-solid fa-tags" style="padding-left: 128px;"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Shop" asp-controller="Product" asp-action="Index">
                        <span class="menu-title">Products</span>
                        <i class="fa-solid fa-book" style="padding-left: 130px;"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Shop" asp-controller="Order" asp-action="Index">
                        <span class="menu-title">Orders</span>
                        <i class="fa-solid fa-cart-shopping" style="padding-left: 140px;"></i>
                    </a>
                </li>

                <li class="nav-item sidebar-actions">
                    <span class="nav-link">
                        <div class="border-bottom">
                            <h6 class="font-weight-normal mb-3">Projects</h6>
                        </div>
                        <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-block btn-lg btn-gradient-primary mt-4"> View your shop</a>
                    </span>
                </li>
            </ul>
        </nav>
        <div class="content-wrapper">
        @RenderBody()
        </div>

        <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
                <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Bookshop © 2023 </span>
                <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Creating bookshop admin template from Thanh</span>
            </div>
        </footer>
        <!-- partial -->
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
    <script src="./~/shop/vendors/js/vendor.bundle.base.js"></script>

    <script src="./~/shop/js/hoverable-collapse.js"></script>
    <script src="./~/shop/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>