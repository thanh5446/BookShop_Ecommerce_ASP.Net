@model Assignment.Models.BookVM

@{
    ViewData["Title"] = "Updating Product";
    Layout = "~/Areas/Shop/Views/Shared/_Shop2Layout.cshtml";
   
}


<div class="col-9 grid-margin stretch-card" style="margin-left: 200px; margin-top: 100px;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Name: @Model.Name with id: @Model.ID</h4>
            <p class="card-description">Input the information below </p>
            <div class="col-md-8">
                <div class="d-flex justify-content-end">
                    <img src="~/images/products/@Model.Image2" alt="@Model.Name" width="80" />
                </div>
            </div>
            <form class="forms-sample" asp-area="Shop" asp-controller="Product" asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(x => x.ID)
                @Html.HiddenFor(x => x.Image2)
                <div class="form-group">
                    <label asp-for="Name">Name Book</label>
                    <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input type="number" class="form-control" asp-for="Price" value="@Model.Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountPrice">DiscountPrice</label>
                        <input type="number" class="form-control" asp-for="DiscountPrice" value="@Model.DiscountPrice">
                    <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity">Quantity</label>
                        <input type="number" class="form-control" asp-for="Quantity" value="@Model.Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author">Author</label>
                        <input type="text" class="form-control" asp-for="Author" value="@Model.Author">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category">Category</label>
                    <select class="form-control" asp-for="CategoryID" asp-items="ViewBag.categoryList">
                        <option value="@Model.CategoryID" disabled selected>Select a category</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Status">Status</label>
                    <select class="form-control" asp-for="Status">
                            <option value="@Model.Status" disabled selected>@Model.Status</option>
                        <option value="InStock">InStock</option>
                        <option value="OutOfStock">OutOfStock</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Image">upload image</label>
                    <br />
                    <span class="input-group-append">
                        <input type="file" class="file-upload-browse btn btn-gradient-primary" value="@Model.Image" asp-for="Image">
                    </span>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                        <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>

            </form>
        </div>
        <form asp-area="Shop" asp-controller="Product" asp-action="Index" method="post">
            <button type="submit" class="btn btn-primary" style="width:100%">Cancel</button>
        </form>
    </div>
</div>